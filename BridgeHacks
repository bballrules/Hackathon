      function getSteps() {
        const cal = $('#calories').val();
        const hour = $('#hours').val();
        const data = `c${cal}-h${hour}`;
          $("#result tbody tr").remove();
          steps.forEach((val) => {
            const row =  `<tr><td>${val[data].col_1}</td><td>${val[data].col_2}</td><td>${val[data].col_3}</td></tr>`;
            $("#result tbody").append(row);
          });
